{
  "extends": ["next", "next/core-web-vitals"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "always"],
    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 2,
        "ignoreComments": false,
        "ignoreTrailingComments": false
      }
    ]
  }
}
